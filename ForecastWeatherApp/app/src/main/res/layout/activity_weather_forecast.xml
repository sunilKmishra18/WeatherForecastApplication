<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/size_dp_2"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    tools:context="com.sunilmishra.android.forecastweatherapp.ui.WeatherForecastActivity">

    <TextView
        android:id="@+id/textViewApplicationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginStart="@dimen/size_dp_16"
        android:layout_marginTop="@dimen/size_dp_200"
        android:layout_marginBottom="@dimen/size_dp_285"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_sp_27"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <include layout="@layout/layout_weather_info" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:visibility="visible" />

</LinearLayout>